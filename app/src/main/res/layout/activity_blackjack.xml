        android:layout_width="65dp"
        android:layout_height="100dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="@+id/imageViewC1"
        app:layout_constraintTop_toBottomOf="@+id/buttonParar"
